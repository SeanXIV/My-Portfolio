        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">Weather application</MudText>
                <div class="row">
                    <MudPaper Class="pa-2 ma-1" Outlined="false" Style="background-color:whitesmoke">Python</MudPaper>
                </div>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardMedia Image="images/pilars.jpg" Height="250" />
        <MudCardContent>
            <MudText Typo="Typo.h6" Style="font-family:Calibri">
                This photo was taken in a small village in Istra Croatia.</MudText>
        </MudCardContent>
    </MudCard>
</div>

