@page "/about"
@rendermode InteractiveServer

<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>Experience</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true" class="heading">My Experience</MudText>

<div class="cards" >
    <MudCard Class="mb-16 pb-16" Style="background-color:whitesmoke">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudIcon Icon="@Icons.Material.Filled.School" />
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">Graduated at WeThinkCode</MudText>
                <MudText Typo="Typo.body2">Gauteng</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body2" Style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
                WeThinkCode_ Alumni. Attending WeThinkCode_ 
                had an immensely positive influence on my life. It equipped me with
                essential skills, knowledge, and opportunities that have significantly 
                shaped my career and personal development.</MudText>
        </MudCardContent>
    </MudCard>
    <MudCard Class="mb-16 pb-16" Style="background-color:whitesmoke">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudIcon Icon="@Icons.Material.Filled.Work" />
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">Web Developer Intern</MudText>
                <MudText Typo="Typo.body2">Remote</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body2" Style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">

            </MudText>
        </MudCardContent>
    </MudCard>
    <MudCard Class="mb-16 pb-16" Style="background-color:whitesmoke">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudIcon Icon="@Icons.Material.Filled.Work" />
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">Java Developer Intern</MudText>
                <MudText Typo="Typo.body2">Remote</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body2" Style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
                This internship was observed by Oasis Infobyte as being a learning opportunity for me,
                spanning a duration of 1 month whereby I was enhancing my Java Skills and developing projects
                using java.This internship embraced orientation and emphasised learning new skills
                with a deeper understanding of concepts through hands-on application of the knowledge you
                gained as an intern.
            </MudText>
        </MudCardContent>
    </MudCard>
</div>

<style>
    .heading {
        text-align: center;
        font-family: 'Microsoft Sans Serif';
        margin-bottom: 50px;
    }
    .cards {
        
        width: 600px;
        height: 500px;
        margin-left: auto;
        margin-right: auto;
      
    }
</style>




